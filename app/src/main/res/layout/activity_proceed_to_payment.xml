<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProceedToPaymentActivity"
    android:background="@drawable/wall4"

   >

    <ImageView
        android:id="@+id/img_proceed_qrview"

        android:layout_width="355dp"
        android:layout_height="421dp"
        android:layout_gravity="center"
        android:layout_marginBottom="272dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_payment_proceed"
        app:layout_constraintVertical_bias="0.572" />

    <Button
        android:id="@+id/btn_proceed_finish"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@drawable/background_cancel"
        android:fontFamily="sans-serif"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_proceed_qrview" />

</androidx.constraintlayout.widget.ConstraintLayout>