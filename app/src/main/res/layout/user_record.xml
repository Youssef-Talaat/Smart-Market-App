<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/rounded_border_edittext"
android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_user_record_fullname"
        android:layout_width="253dp"
        android:layout_height="38dp"
        android:text="User Fullname"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_user_record_usertype"
        android:layout_width="253dp"
        android:layout_height="38dp"
        android:text="UserType"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#121F61"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_record_fullname"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/btn_user_record_edit"
        android:layout_width="96dp"
        android:layout_height="38dp"
        android:drawableLeft="@drawable/edit"
        android:text="Edit"
        android:textSize="20dp"
        android:textColor="#121F61"
        android:background="@color/barColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_user_record_removeuser"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_record_usertype"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_user_record_removeuser"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:drawableLeft="@drawable/bin"
        android:text="Delete"
        android:textSize="20dp"

        android:background="@color/barColor"
        android:textColor="#D30505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_record_usertype"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>