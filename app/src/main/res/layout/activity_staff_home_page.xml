<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall4"

    tools:context=".Activities.StaffHomePageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="346dp"
        android:layout_height="266dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/logo4" />

    <Button
        android:id="@+id/btn_staffhomepage_manageproducts"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:background="@drawable/background_login"
        android:fontFamily="sans-serif"
        android:text="Manage Products"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_staffhomepage_acceptpayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.516" />

    <Button
        android:id="@+id/btn_staffhomepage_acceptpayment"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/background_login"
        android:fontFamily="sans-serif"
        android:text="Accept Payment"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_staffhomepage_editprofile"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_login"
        android:fontFamily="sans-serif"
        android:text="Edit Profile"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_staffhomepage_refund" />

    <Button
        android:id="@+id/btn_staffhomepage_refund"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_login"
        android:fontFamily="sans-serif"
        android:text="Refund Products"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_staffhomepage_acceptpayment" />

    <Button
        android:id="@+id/btn_staffhomepage_logout"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_cancel"
        android:fontFamily="sans-serif"
        android:text="LogOut"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_staffhomepage_editprofile" />

</androidx.constraintlayout.widget.ConstraintLayout>