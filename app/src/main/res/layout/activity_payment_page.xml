<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall4"
    tools:context=".Activities.PaymentPageActivity"
        android:orientation="vertical"
>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView_payment_boughtitems"
            android:layout_width="345dp"
            android:layout_height="478dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/txt_payment_totalamount"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_border_edittext"
        android:text="Amount"
        android:textColorHint="#121F61"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recView_payment_boughtitems"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/btn_payment_proceed"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@drawable/background_confirm"
        android:fontFamily="sans-serif"
        android:text="view qr code"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_payment_totalamount"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/btn_paymentpage_cancel"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@drawable/background_cancel"
        android:fontFamily="sans-serif"
        android:text="Back"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_payment_proceed"
        app:layout_constraintVertical_bias="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>